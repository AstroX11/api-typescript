{
	"name": "astrox11-server",
	"description": "Server for AstroX11 repository",
	"repository": "https://github.com/AstroX11/server",
	"stack": "container",
	"env": {
		"NODE_ENV": {
			"description": "Set the environment to production",
			"value": "production"
		},
		"NODE_OPTIONS": {
			"description": "Set Node.js memory options",
			"value": "--max-old-space-size=512"
		},
		"PUPPETEER_ARGS": {
			"description": "Arguments for Puppeteer",
			"value": "--no-sandbox --disable-setuid-sandbox"
		},
		"SHARP_IGNORE_GLOBAL_LIBVIPS": {
			"description": "Ignore global libvips library for Sharp",
			"value": "1"
		}
	}
}
